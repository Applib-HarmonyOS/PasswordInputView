<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/res/custom"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical"
    ohos:left_padding="16vp"
    ohos:right_padding="16vp">
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:id="$+id:passwordView"
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="12"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_borderColor="$color:colorPrimary"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_pwdColor="$color:colorAccent"
        app:pwv_spacing="12vp" />
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="123"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_pwdStyle="plaintext"
        app:pwv_radius="10vp"
        app:pwv_spacing="12vp" />
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="123"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_asterisk="\@"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_pwdStyle="asterisk" />
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="1234"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_asterisk="#"
        app:pwv_borderColor="$color:colorPrimary"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_pwdStyle="asterisk"
        app:pwv_radius="10vp" />
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="123"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_borderStyle="line"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_pwdStyle="asterisk"
        app:pwv_spacing="12vp" />
    <com.matthew.passwordinput.lib.PasswordInputView
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:top_margin="10vp"
        ohos:background_element="@null"
        ohos:text_input_type="pattern_number"
        ohos:padding="1vp"
        ohos:text="123"
        ohos:text_size="32fp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pwv_haveInputBorderColor="$color:colorAccent"
        app:pwv_maxLength="4"
        app:pwv_radius="10vp"
        app:pwv_spacing="12vp" />
</DirectionalLayout>